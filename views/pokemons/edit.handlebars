<form method="POST" action="/pokemons/{{pokemon.id}}?_method=PUT">
<h2 class="mx-5">Edit</h2>
    <div class="form-group">
        <label for="id">ID </label>
        <input type="text" class="form-control" name="id" value="{{pokemon.id}}" />
    </div>    
    <div class="form-group">
        <label for="name">Name </label>
        <input type="text" class="form-control" name="name" value="{{pokemon.name}}" />
    </div> 
    <div class="form-group">
        <label for="type">Type </label>
        <input type="text" class="form-control" name="type" value="{{pokemon.type}}" />
    </div> 
    <input type="submit" value="Save" />
</form>