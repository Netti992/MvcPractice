<table class="table table-striped">
    <tbody>
        {{#each videogames}}
        <tr>
            <td></td>
            <td>{{id}}</td>
            <td>{{distributor}}</td>
            <td>{{name}}</td>
            <td>{{type}}</td>
            td><a href="/videogames/{{id}}" class="btn btn-outline-secondary btn-block">Show</a></td>
            <td><a href="/videogames/{{id}}/edit" class="btn btn-outline-secondary btn-block">Edit</a></td>
            <td>
                <form method="POST" action="/videogames/{{id}}?_method=DELETE" >
                    <input class="btn btn-outline-secondary btn-block" type="submit" value="Delete" />
        </tr>
        {{/each}}
    </tbody>
</table>