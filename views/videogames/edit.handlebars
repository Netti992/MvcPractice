<form method="POST" action="/pokemons/{{pokemon.id}}?_method=PUT">
    <h2 class="mx-5">Edit</h2>
    <div class="form-group">
        <label for="id">ID</label>
        <input type="text" class="form-control" name="id" value="{{videogames.id}}" />
    </div>    
    <div class="form-group">
        <label for="distributor">Distributor</label>
        <input type="text" class="form-control" name="distributor" value="{{videogames.distributor}}" />
    </div> 
    <div class="form-group">
        <label for="type">Type</label>
        <input type="text" class="form-control" name="type" value="{{videogames.type}}" />
    </div> 
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="name" value="{{videogames.name}}" />
    </div> 
    <input type="submit" value="Save" />
</form>