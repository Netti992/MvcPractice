<table class="table table-striped">
    <tbody>
        {{#each clocks}}
        <tr>
            <td></td>
            <td>{{model}}</td>
            <td>{{manufacturer}}</td>
            <td>{{type}}</td>
            <td><a href="/clocks/{{id}}" class="btn btn-outline-secondary btn-block">Show</a></td>
            <td><a href="/clocks/{{id}}/edit" class="btn btn-outline-secondary btn-block">Edit</a></td>
            <td>
                <form method="POST" action="/clocks/{{id}}?_method=DELETE" >
                    <input class="btn btn-outline-secondary btn-block" type="submit" value="Delete" />
        </tr>
        {{/each}}
    </tbody>
</table>
