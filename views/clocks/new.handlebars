<form method="POST" action="/clocks">
<h2 class="mx-5">New</h2>  
    <div class="form-group">
        <label for="name">Name </label>
        <input type="text" class="form-control" name="name" value="{{clock.name}}" />
    </div> 
    <div class="form-group">
        <label for="type">Type </label>
        <input type="text" class="form-control" name="type" value="{{clock.type}}" />
    </div> 
    <input type="submit" value="Save" />
</form>