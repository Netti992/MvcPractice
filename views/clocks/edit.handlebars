<form method="POST" action="/clocks/{{clock.id}}?_method=PUT">
    <h2 class="mx-5">Edit</h2>
    <div class="form-group mx-5">
        <label for="manufacturer">Manufacturer</label>
        <input type="text" class="form-control" name="manufaturer" value="{{clock.manufacturer}}" />
    </div>    
    <div class="form-group mx-5">
        <label for="model">Model</label>
        <input type="text" class="form-control" name="model" value="{{clock.model}}" />
    </div> 
    <div class="form-group mx-5">
        <label for="type">Type</label>
        <input type="text" class="form-control" name="type" value="{{clock.type}}" />
    </div> 
    <div class="form-group mx-5">
        <label for="price">Price</label>
        <input type="text" class="form-control" name="price" value="{{clock.price}}" />
    </div> 
    <input type="submit" value="Save" />
</form>